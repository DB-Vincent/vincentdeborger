{{!< default}}

{{#post}}
<article>
    <h1 class="text-3xl font-extrabold dark:text-white">{{title}}</h1>

    {{#if feature_image}}
        <figure>
            <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        </figure>
    {{/if}}

    <div class="post-content prose dark:prose-dark max-w-none">
        {{content}}
    </div>
</article>
{{/post}}
