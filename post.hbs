{{!< default}}

{{#post}}
<div class="mb-8">
    <h1 class="text-3xl w-full text-center font-serif tracking-wider dark:text-white">{{title}}</h1>
    {{#if custom_excerpt}}
        <p class="mx-auto text-center prose dark:prose-dark mt-4">{{custom_excerpt}}</p>
    {{/if}}
</div>

{{#if feature_image}}
<figure class="my-16">
    <img
        srcset="{{img_url feature_image size="s"}} 300w,
                {{img_url feature_image size="m"}} 600w,
                {{img_url feature_image size="l"}} 1000w,
                {{img_url feature_image size="xl"}} 2000w"
        sizes="(max-width: 1000px) 1000px, 2000px"
        loading="lazy"
        src="{{img_url feature_image size="xl"}}"
        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
    />
    {{#if feature_image_caption}}
        <figcaption>{{feature_image_caption}}</figcaption>
    {{/if}}
</figure>
{{/if}}
<article class="mt-4 prose dark:prose-dark max-w-none post-content">
    {{content}}
</article>

{{/post}}